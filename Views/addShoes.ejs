    <body>
        <%- include ./partials/navbar.ejs %>
    <h1>Add Shoes</h1>
    <form action ="/shoes/add" method="POST" enctype="multipart/form-data" id="shoesform">
        <label for="name">Name</label>
        <input type="text" name="name">
        <br><br>
        <select name="brand" form="shoesform">
            <option value="Nike">Nike</option>
            <option value="Adidas">Adidas</option>
            <option value="Air Jordan">Air Jordan</option>
            <option value="Converse">Converse</option>
        </select>
        <br><br>
        <select name="type" form="shoesform">   
            <option value="Running">Running</option>
            <option value="Adidas">Basketball</option>
            <option value="Casual">Casual</option>
            <option value="Soccer">Soccer</option>
        </select>
        <br><br>    
        <label for="Price">Price</label>
        <input type="number" name="price">
        <br><br>
        <input type="file" name="ShoesImage">
        <br><br>
        <button type="submit">Submit</button>
        <button onclick="window.location.href='/shoes';">Cancel</button>
    </form>
    

